{
  "name": "bff-boilerplate-graphql",
  "version": "0.5.1",
  "description": "Backend for Frontend boilerplate",
  "main": "index.js",
  "author": "Nicol√°s Riquelme ft Ivette Leon",
  "license": "ISC",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "lint:fix": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "commit": "git-cz",
    "prisma:client": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:deploy": "prisma migrate deploy",
    "prisma:seed": "ts-node --transpile-only prisma/seed.ts"
  },
  "repository": {
    "type": "git",
    "url": "https://gitlab.com/ocean-gold/devops/examples/boilerplate-typescript"
  },
  "dependencies": {
    "@apollo/server": "^4.11.2",
    "@as-integrations/fastify": "^2.1.1",
    "@faker-js/faker": "^9.3.0",
    "@fastify/cors": "^9.0.1",
    "@nestjs/apollo": "^12.2.2",
    "@nestjs/axios": "^3.1.3",
    "@nestjs/common": "^10.4.13",
    "@nestjs/core": "^10.4.13",
    "@nestjs/event-emitter": "^2.1.1",
    "@nestjs/graphql": "^12.2.2",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-fastify": "^10.4.13",
    "axios": "^1.7.9",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "cookie-parser": "^1.4.7",
    "dotenv": "^16.4.7",
    "express-session": "^1.18.1",
    "fastify": "^4.26.2",
    "firebase-admin": "^13.0.1",
    "graphql": "^16.9.0",
    "helmet": "^8.0.0",
    "jwks-rsa": "^3.1.0",
    "module-alias": "^2.2.3",
    "nest-winston": "^1.9.7",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pino-pretty": "^13.0.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.4.8",
    "@nestjs/schematics": "^10.2.3",
    "@nestjs/testing": "^10.4.13",
    "@prisma/client": "6.7.0",
    "@stylistic/eslint-plugin": "^2.11.0",
    "@stylistic/eslint-plugin-migrate": "^2.11.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.1",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.16.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "prisma": "6.7.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "_moduleAliases": {
    "@root": ".",
    "@commons": "src/commons",
    "@logger": "./src/commons/infrastructure/logger/index",
    "@authz": "src/authz",
    "@task": "src/task",
    "@critic-activity": "src/critic-activity",
    "@multimedia": "src/multimedia",
    "@control-strategy": "src/control-strategy",
    "@control": "src/control",
    "@undesired-event": "src/undesired-event"
  },
  "jest": {
    "moduleNameMapper": {
      "^@commons/(.*)$": "<rootDir>/commons/$1",
      "^@user/(.*)$": "<rootDir>/user/$1",
      "^@customer/(.*)$": "<rootDir>/customer/$1",
      "^@authz/(.*)$": "<rootDir>/authz/$1",
      "^@task/(.*)$": "<rootDir>/task/$1",
      "^@critic-activity/(.*)$": "<rootDir>/critic-activity/$1",
      "^@multimedia/(.*)$": "<rootDir>/multimedia/$1",
      "^@control-strategy/(.*)$": "<rootDir>/control-strategy/$1",
      "^@control/(.*)$": "<rootDir>/control/$1",
      "^@undesired-event/(.*)$": "<rootDir>/undesired-event/$1"
    },
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
